// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Profile {
  address   String   @id
  name      String?
  bio       String?
  skills    String?
  nonce     String?  // For SIWE-style authentication
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JobMetadata {
  jobId       Int      @id
  title       String
  description String
  category    String?
  tags        String?
  createdAt   DateTime @default(now())
}
