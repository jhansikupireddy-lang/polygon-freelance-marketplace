# PolyLance Environment Variables
# Copy this file to .env and fill in your values

# ===================================
# REQUIRED - Get these first
# ===================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
VITE_WALLET_CONNECT_PROJECT_ID=your_project_id_here

# Polygon RPC URLs
VITE_POLYGON_RPC=https://polygon-rpc.com
VITE_POLYGON_AMOY_RPC=https://rpc-amoy.polygon.technology

# ===================================
# OPTIONAL - For full features
# ===================================

# Biconomy (for gasless transactions)
# Get from: https://dashboard.biconomy.io
VITE_BICONOMY_API_KEY=

# Huddle01 (for video calls)
# Get from: https://huddle01.com
VITE_HUDDLE_PROJECT_ID=

# Sentry (for error tracking)
# Get from: https://sentry.io
VITE_SENTRY_DSN=

# Stripe (for payments)
# Get from: https://dashboard.stripe.com
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_BICONOMY_PAYMASTER_URL=
VITE_BICONOMY_BUNDLER_URL=

# Social Login (Particle Auth)
VITE_PARTICLE_PROJECT_ID=
VITE_PARTICLE_CLIENT_KEY=
VITE_PARTICLE_APP_ID=

# The Graph (for indexing)
# Deploy your subgraph first
VITE_GRAPH_API_URL=

# IPFS Gateway
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/

# ===================================
# CONTRACT ADDRESSES (Testnet)
# ===================================

VITE_FREELANCE_ESCROW_ADDRESS=
VITE_POLY_TOKEN_ADDRESS=
VITE_YIELD_MANAGER_ADDRESS=
VITE_SWAP_MANAGER_ADDRESS=
VITE_ASSET_TOKENIZER_ADDRESS=
VITE_INVOICE_NFT_ADDRESS=
VITE_AI_ORACLE_ADDRESS=
VITE_COMPLIANCE_REGISTRY_ADDRESS=
VITE_SPECIALIZED_SKILL_REGISTRY_ADDRESS=
VITE_QUADRATIC_GOVERNANCE_ADDRESS=

# ===================================
# DEPLOYMENT SETTINGS
# ===================================

# For production builds
VITE_APP_ENV=production
VITE_APP_NAME=PolyLance
VITE_APP_URL=https://polylance.vercel.app
